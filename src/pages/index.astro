---
import { SocialLinks } from "../components/SocialLinks";
import { getCollection } from "astro:content";
import { fromCollection } from "../utils/social-utils";
import Layout from "../layouts/Layout.astro";
import ProfileCard from "../components/ProfileCard.astro";
import Timeline from "../components/Timeline.astro";
import AboutMe from "../components/AboutMe.astro";

const socials = fromCollection(await getCollection("socials"));
---

<Layout title="Essential Randomness â€” Ms Boba's Emporium of Weirdness">
  <main class="home">
    <section class="about">
      <ProfileCard />
      <AboutMe />
    </section>
    <section>
      <h1>Welcome to my <strike>Twisted Mind</strike> Professional Website</h1>
      <p>
        Since 2019, I've been working on building sustainable projects and
        communities that will make the web a better place, while adding
        marketing and entrepreneurship skills to my software engineering
        background. You can learn more about the projects I built in the
        <a href="/projects">Projects section</a>, and find out how to support my
        work on the <a href="/support-me">Support Me</a>
         page.
      </p>

      <section>
        <Timeline />
      </section>

      <section class="social">
        <h2>As seen on</h2>
        <SocialLinks links={socials} />
      </section>
    </section>
  </main>
</Layout>

<style>
  .home {
    /* grid-template-columns: 22% auto 22%; */
    column-gap: 30px;
  }

  .about {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }
</style>
